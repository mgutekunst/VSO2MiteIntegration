{
    "manifestVersion": 1,
    "id": "sample-extension",
    "version": "0.1.0",
    "name": "Mite 2 VSTS integration",
    "scopes": [
        "vso.work"
    ],
    "description": "A sample Visual Studio Services extension.",
    "publisher": "ManuelGutekunst",
    "public": false,
    "icons": {
        "default": "img\/logo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "branding": {
        "color": "rgb(255,0,0)",
        "theme": "light"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "dist",
            "addressable": true
        }
    ],
    "categories": [
        "Collaborate"
    ],
    "contributions": [
        {
            "id": "home",
            "targets": [
                "ms.vss-work-web.work-item-context-menu"
            ],
            "type": "ms.vss-web.action",
            "description": "Action that adds the current work item id to mite",
            "properties": {
                "text": "Add and start Mite timer",
                "title": "Updates the title of the work item from the extension",
                "icon": "img\/logo.png",
                "uri": "dist\/main.html",
                "group": "miteAction"
            }
        },
        {
            "id": "settings",
            "targets": [
		"ms.vss-work-web.work-hub-group"
            ],
            "type": "ms.vss-web.hub",
            "description": "Settings page for VSO2Mite integration",
            "properties": {
                "name": "VSO2Mite Settings",
                "order": 99,
                "uri": "dist/settings.html"
            }
        }
    ]
}
